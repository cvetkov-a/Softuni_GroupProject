@{
    ViewBag.Title = "Home";
}

<link rel="stylesheet" href="~/assets/css/IndexSpecific.css" />
<section id="trainers" class="section">
    <div class="container">
        <div class="row trainers">
            <div>
                @foreach (var name in Model.Trainers)
                {
                    <div class="col-md-3 col-sm-6">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <img src="assets\images\trainers\@name.PicLink" class="img-responsive" alt="">
                            </div>

                            <div class="panel-body">
                                <div class="name">@name.Name @name.LastName</div>
                                <p>@name.Desc</p>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                @Html.ActionLink("See the whole crew", "Trainers", "Home", null, new { @class = "btn" })
            </div>
        </div>
    </div>
</section>
<section id="blog" class="section">
    <div class="container">
        <div class="row">
            @foreach (var news in Model.News)
            {
                <div class="col-md-4">
                    <div class="box">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="img">
                                    <a href="">
                                        <img src="assets\images\news\@news.PicLink" class="img-responsive" alt="">
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-9">
                                <div class="content">
                                    <h5 class="title">
                                        <a href="">@news.Title</a>
                                    </h5>
                                    <p>@news.Content</p>
                                    <p class="postedBy">
                                        by
                                        <a href="">@news.Author[0]</a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
            
        </div>
        <div class="row">
            <div class="col-lg-12">
                @Html.ActionLink("Read more", "News", "Home", null, new { @class = "btn" })
            </div>
        </div>
    </div>
</section>

    </main>
  </section>